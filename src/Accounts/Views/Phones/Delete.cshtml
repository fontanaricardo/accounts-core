@model Accounts.Models.PhoneViewModel

@{
    ViewBag.Title = "Excluir";
}

<h2>@ViewBag.Title</h2>

<h3>Tem certeza que deseja excluir?</h3>
<div>
    <hr />

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Phone.Number)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Phone.Number)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Phone.CreatedAt)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Phone.CreatedAt)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Phone.UpdatedAt)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Phone.UpdatedAt)
        </dd>
        
        <dt>
            @Html.DisplayNameFor(model => model.Phone.UpdatedAt)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Phone.UpdatedAt)
        </dd>

    </dl>

    <div class="form-horizontal">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            
            @Html.HiddenFor(m => m.Phone.PhoneID)
            @Html.HiddenFor(m => m.Phone.Number)
            @Html.HiddenFor(m => m.Phone.CreatedAt)
            @Html.HiddenFor(m => m.Phone.UpdatedAt)
            
            <div class="form-group">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(m => m.Password, "Password")
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="col-md-offset-2 col-md-10">
                @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-default" })
                <input type="submit" value="Excluir" class="btn btn-danger" />

            </div>
        }

    </div>

</div>
